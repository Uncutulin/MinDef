@using Commons.HtmlHelpers
@model DAL.DTOs.Admin.MediosDTO

<form asp-action="_Update">

    @using (Html.BoxBody())
    {
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Fuerza" class="control-label"></label>
            <select asp-items="@ViewBag.Fuerza" asp-for="Fuerza.Id" class="form-control" searchable="true"></select>
            <span asp-validation-for="Fuerza" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label"> Tipo de Medios</label>
            <select asp-items="@ViewBag.TipoMedios" asp-for="TipoMedios.Id" class="form-control" searchable="true"></select>
            <span asp-validation-for="TipoMedios" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Finalidad" class="control-label"></label>
            <input asp-for="Finalidad" class="form-control" />
            <span asp-validation-for="Finalidad" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Cantidad" class="control-label"></label>
            <input asp-for="Cantidad" class="form-control" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
        <div class="form-group " hidden>
            <label asp-for="Activo" class="control-label"></label>
            <input asp-for="Activo" class="form-control" />
            <span asp-validation-for="Activo" class="text-danger"></span>
        </div>
        <div class="form-group " hidden>
            <label asp-for="OperacionId" class="control-label"></label>
            <input name="OperacionId" asp-for="OperacionId" class="form-control" />
            <span asp-validation-for="OperacionId" class="text-danger"></span>
        </div>
    }
    @using (Html.BoxFooter())
    {
        <div class="col-md-12" style="display: flex; justify-content: right;align-items: center;">
            <div class="form-group ">
                <a class="btn btn-default" data-dismiss="modal">Cancelar</a>
                <input type="submit" value="Guardar" class="btn btn-primary pull-right" />
            </div>
        </div>
    }

</form>